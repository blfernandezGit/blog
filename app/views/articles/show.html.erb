<p>
    <strong>Name:</strong>
    <%= @article.name %>
</p>

<p>
    <strong>Body:</strong>
    <%= @article.body %>
</p>

<table> Comments
    <thead>
        <tr>
            <th>ID</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @article.comments.each do |comment| %>
            <tr>
                <td><%= comment.id %></td>
                <td><%= comment.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Add Comment', new_article_comment_path(@article) %>
<br/>
<br/>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Delete', articles_path(@article), method: :delete,data: { confirm: 'Delete Article?' } %>
