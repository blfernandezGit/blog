<p id="notice"><%= notice %></p>

<h3>Tasks</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Task date</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.body %></td>
        <td><%= task.task_date %></td>
        <td><%= task.category_id %></td>
        <td><%= link_to 'Show', category_task_path(@category, task) %></td>
        <td><%= link_to 'Edit', edit_category_task_path(@category, task) %></td>
        <td><%= link_to 'Destroy', category_task_path(@category, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_category_task_path(@category) %>
